<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:color="#000"
        android:text="Terms of Service"
        android:layout_marginTop="20dip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25dip" />

    <TextView
        android:id="@+id/textView2"
        android:layout_below="@id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:color="#000000"
        android:gravity="center"
        android:textSize="15dip"
        android:layout_marginTop="20dip"
        android:text="Please read the Terms and Conditions below before using our services"
        android:textAppearance="?android:attr/textAppearanceMedium" />
	
    <ScrollView
        android:id="@+id/scroll"
        android:layout_below="@id/textView2"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="30dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <LinearLayout
            
       		android:layout_width="fill_parent"
       		android:layout_height="fill_parent"
       		android:orientation="vertical">

       		<TextView
       		    android:layout_width="fill_parent"
       		    android:layout_height="233dp"
       		    android:text="      The services used by Vid-It can be used by any person, if the terms of service are respected. We have the right to disable accounts that are suspect of using our service for malicious or illegal activites.\n
       By submitting videos through our app, you hereby agree to freely and knowingly send videos to drives of your choice and later be uploaded to a social media of your choice. Be aware that Vid-It is responsible for consequential or indirect losses.\n
       You further agree not to upload any videos that infringe upon or violate the copyright, trademark, publicity, privacy or their rights of any third party.\n
       Thank you for using our services. We wish you the best. " />

   		</LinearLayout>
	</ScrollView>
<LinearLayout 
    		android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/scroll">
    <Button
        android:id="@+id/agree"
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="wrap_content"
        android:text="Agree" />
	
   <Button
        android:id="@+id/disagree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:text="Disagree" />
   </LinearLayout>
   
</RelativeLayout>
